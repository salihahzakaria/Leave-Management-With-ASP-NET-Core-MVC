@using LeaveManagement.Core.Enums
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
</head>
<body class="text-gray-900">
    <div class="container mx-auto p-4">
        <div class="p-6 flex justify-between items-center mb-4">

            <div class="text-2xl text-gray-800">Leave Management System</div>

            <div class="flex items-center">
                @if (User.Identity.IsAuthenticated && User.IsInRole(UserTypeOptions.Admin.ToString()))
                {
                    <div>
                        <a asp-controller="Leave" asp-action="Index" asp-area="Admin" class="bg-pink-500 text-white py-2 px-4 rounded hover:bg-pink-600">Manage Leave</a>
                        <a asp-controller="LeaveType" asp-action="Index" asp-area="Admin" class="bg-pink-500 text-white py-2 px-4 rounded hover:bg-pink-600">Manage Leave Type</a>
                        <a asp-controller="Account" asp-action="Index" asp-area="Admin" class="bg-pink-500 text-white py-2 px-4 rounded hover:bg-pink-600">Manage User</a>
                    </div>
                }
            </div>

            <div class="flex items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-gray-500 font-small py-2 px-4">
                        @User.Identity?.Name
                    </span>
                    <a asp-controller="Account" asp-action="Logout" class="py-2">Logout</a>
                }
            </div>
        </div>

        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
