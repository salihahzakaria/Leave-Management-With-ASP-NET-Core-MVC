@model RegisterRequest

@{
    ViewBag.Title = "Register";
}

<form asp-controller="Account" asp-action="Register" asp-area="Admin" method="post">
    <h1 class="text-2xl font-semibold mb-4">Register New User</h1>

    @* Name *@
    <div class="mb-4">
        <label asp-for="Name" class="block text-sm font-medium text-gray-700">Name</label>
        <input asp-for="Name" class="mt-1 p-2 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md" />
        <span asp-validation-for="Name" class="text-pink-900 text-sm"></span>
    </div>

    @* Email *@
    <div class="mb-4">
        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
        <input asp-for="Email" class="mt-1 p-2 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md" />
        <span asp-validation-for="Email" class="text-pink-900 text-sm"></span>
    </div>

    @* Phone *@
    <div class="mb-4">
        <label asp-for="Phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
        <input asp-for="Phone" class="mt-1 p-2 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md" />
        <span asp-validation-for="Phone" class="text-pink-900 text-sm"></span>
    </div>

    @* User Type *@
    <div class="mb-4">
        <label asp-for="UserType" class="block text-sm font-medium text-gray-700">User Type</label>

        <div class="flex items-center">
            <input type="radio" id="Employee" asp-for="UserType" value="Employee" checked />
            <label for="Employee" class="text-gray-700 text-sm">Employee</label>
        </div>

        <div class="flex items-center mt-2">
            <input type="radio" id="Admin" asp-for="UserType" value="Admin" />
            <label for="Admin" class="text-gray-700 text-sm">Admin</label>
        </div>

        <span asp-validation-for="UserType" class="text-pink-900 text-sm"></span>
    </div>

    @* Password *@
    <div class="mb-4">
        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
        <input asp-for="Password" class="mt-1 p-2 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md" />
        <span asp-validation-for="Password" class="text-pink-900 text-sm"></span>
    </div>

    @* ConfirmPassword *@
    <div class="mb-4">
        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="mt-1 p-2 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md" />
        <span asp-validation-for="ConfirmPassword" class="text-pink-900 text-sm"></span>
    </div>

    <div class="flex items-center justify-end">
        <button type="submit" class="bg-pink-500 text-white py-2 px-4 rounded hover:bg-pink-600">Register</button>
    </div>
</form>


