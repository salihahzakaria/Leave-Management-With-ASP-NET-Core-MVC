@model IEnumerable<LeaveTypeResponse>

@{
    ViewBag.Title = "Leave Type";
}

<form asp-controller="LeaveType" asp-action="Index" asp-area="Admin" method="get" class="p-4">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-semibold">Leave Type</h1>
        <a asp-controller="LeaveType" asp-action="Create" class="bg-pink-500 text-white py-2 px-4 rounded hover:bg-pink-600">New Leave Type</a>
    </div>

    <table class="w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-200">
            <tr>
                <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Leave Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (LeaveTypeResponse leave_type in Model)
            {
                <tr class="border-b">
                    <td class="py-3 px-4 text-gray-900">@leave_type.Name</td>
                </tr>
            }
        </tbody>
    </table>
</form>
